@model IEnumerable<proera.departements>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tablebody" class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.geom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.regions.nom_region)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.geom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.regions.nom_region)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.code_departement }) |
                    @Html.ActionLink("Details", "Details", new { id = item.code_departement }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.code_departement })
                </td>
            </tr>
        }
    </tbody>

    

</table>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {


        $('#tablebody').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/French.json"
            }
        });
    });
</script>
