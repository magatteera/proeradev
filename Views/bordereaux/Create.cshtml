@model proera.bordereaux

@{
    ViewBag.Title = "Creation de Bordereau";
}

<h2>Creation Bordereau</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>bordereaux</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.numero, "Numero", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="numero" id="numero" required class="form-control" />
                @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.datecreation, "Date de Creation", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="datecreation" id="datecreation" class="form-control" />
                @Html.ValidationMessageFor(model => model.datecreation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.montant, "Montant", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="montant" class="form-control" />
            </div>

        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.type, "Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="type" id="type" class="form-control">
                    <option value="encaissement">encaissement</option>
                </select>
                @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour a la liste", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {


        $("#numero").change(function () {
            //alert($("#nivpuissance").val())
            if ($("#numero").val().length < 3 || !$("#numero").val().startsWith("BV")) {
                @*alert($("#numerobordereau").val().length)*@
                $("#numero").val("")
                alert("Veuillez creer un bordereaux en donnant un numero qui commence par BV")
            } 



        });


    });
</script>
