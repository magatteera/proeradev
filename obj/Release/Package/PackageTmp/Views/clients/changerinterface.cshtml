@model proera.SAV

@{
    ViewBag.Title = "Creation";
}
<br />
<h2>Changement d'interface</h2>
<div class="form-horizonal">
    <div class="form-group">
        <label class="control-label col">Entrez la Reference</label>
        <div class="col-md-10">
            <input type="number" id="refclient" class="form-control" />
        </div>
    </div>
</div>


<div id="detailsclient" hidden>
    <div class="row">

        <div class="col">
            <dt>
                Nom
            </dt>

            <dd id="ddNom">

            </dd>
        </div>

        <div class="col">
            <dt>
                Ancienne Interface
            </dt>

            <input type="text" readonly id="oldInterface" class="form-control" />
        </div>

        <div class="col">
            <dt>
                Nouvelle Interface
            </dt>


            <input type="text" id="newInterface" class="form-control" />
        </div>

    </div>
    <br />
    <div class="row">

        <div class="col">
            <dt>
                Index Depose
            </dt>

            <input type="number" id="indexdepose" class="form-control" />
        </div>

        <div class="col">
            <dt>
                Index Pose
            </dt>


            <input type="number" id="indexpose" class="form-control" />
        </div>

        <div class="col">
            <dt>
                Motif
            </dt>


            <textarea  id="motif" class="form-control" />
        </div>


        <div class="col">
            <dt>
                Date
            </dt>


            <input type="date" id="date" class="form-control" />
        </div>

        @*<div class="col">
            <dt>
                Telephone
            </dt>

            <dd id="ddTelephone">

            </dd>
        </div>*@

    </div>
    <br />
    <br />

    <button class="btn btn-success" id="btnChanger">Changer</button>
</div>






<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $("#refclient").change(function () {
            //alert($("#nivpuissance").val())
            data = {
                Reference_Contrat: $("#refclient").val()
            }
            $.ajax({
                type: "POST",
                url: "/clients/changementRefInterface",
                data: data,
                success: function (data) {
                    if (data.message == "trouve") {
                        $("#ddNom").html(data.nom)
                        $("#oldInterface").val(data.oldInterface)

                        $("#detailsclient").attr("hidden", false)

                    } else {

                        $("#detailsclient").attr("hidden", true)

                        alert("Reference du client incorrecte !!")
                    }
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        });



        $("#btnChanger").click(function () {
            //alert($("#nivpuissance").val())
            data = {
                oldinterface: $("#oldInterface").val(),
                newinterface: $("#newInterface").val(),
                indexdepose: $("#indexdepose").val(),
                indexpose: $("#indexpose").val(),
                refclient: $("#refclient").val(),
                date: $("#date").val(),
                motif: $("#motif").val(),
            }
            @*alert(data.oldinterface + data.newinterface + " " + data.indexdepose + " " + data.indexpose + " " + data.refclient)*@
            $.ajax({
                type: "POST",
                url: "/clients/validerChangementInterface",
                data: data,
                success: function (data) {
                    $("#oldInterface").val("")
                    $("#newInterface").val("")
                    $("#indexdepose").val("")
                    $("#indexpose").val("")
                    $("#refclient").val("")
                    $("#date").val("")
                    $("#motif").val("")
                    alert(data.message)
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        });

    });



</script>

