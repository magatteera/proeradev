@model IEnumerable<proera.hbaremes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tablebody" class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Puissance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hbranches.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hcalibres.Calibre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hnivpuissances.NivPuissance)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Puissance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Montant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usages.usage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hbranches.Branch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hcalibres.Calibre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hnivpuissances.NivPuissance)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

   

</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {


        $('#tablebody').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/French.json"
            }
        });
    });
</script>

