@model IEnumerable<proera.encaissements>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tablebody" class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.refclient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.montantencaisee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soldeprepaiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soldepostpaiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateencaissement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.utilisateur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.commentaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bordereaux.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idfacture)
            </th>
            <th></th>
        </tr>
